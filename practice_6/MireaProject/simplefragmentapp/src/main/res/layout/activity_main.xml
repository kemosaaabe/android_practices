<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnFragment8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment8"
            android:text="Stories" />

        <Button
            android:id="@+id/btnFragment7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment7"
            android:text="References" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnFragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment1"
            android:text="Calculator" />

        <Button
            android:id="@+id/btnFragment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="WebView" />

        <Button
            android:id="@+id/btnFragment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment3"
            android:text="Music" />

        <Button
            android:id="@+id/btnFragment4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment4"
            android:text="Sensors" />

        <Button
            android:id="@+id/btnFragment5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment5"
            android:text="Camera" />

        <Button
            android:id="@+id/btnFragment6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickFragment6"
            android:text="Audio" />
    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>